#app
    font-size: 16px
    width: 60%
    margin: 0 auto
    padding: 20px
    .todo-title
        text-align: center
    .todo-header
        .user-info
            padding: 18px 0;
    .todo-input
        input
            width: 100%
            padding: 4px 7px
            border: 1px solid #ccc
            border-radius: 3px
    .todo-empty
        color: #333
        padding: 10px
        text-align: center
    .todo-main
        li
            line-height: 1.8
            padding: 10px 0
            .time
                display: inline-block
                vertical-align: top
                width: 31%
                min-width: 160px
            .task
                display: inline-block
                vertical-align: top
                width: 56%
                &.task-done
                    text-decoration: line-through
            .del-btn
                vertical-align: top
                padding: 3px 5px
                border: 1px solid #333
                background: red
    .todo-footer
        display: flex
        justify-content: space-between
        align-items: center
        .clear-btn
            padding: 3px 5px;
    .form-wrapper
      width:250px
      margin: 0 auto
      .radio-wrapper
        margin: 10px 0
        width: 100%
        text-align: center
      .login-form-button
        width: 100%     